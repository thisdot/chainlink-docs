---
import BaseLayout from "~/layouts/BaseLayout.astro"
import * as CONFIG from "../config"

const formattedContentTitle = `Chainlink Certifications | ${CONFIG.SITE.title}`
---

<BaseLayout title={formattedContentTitle}>
  <main class="certification-page">
    <div class="overflow-hidden">
      <div class="relative-div">
        <section class="sec-big sec-big--dark sec-big--light">
          <div class="cont cont--cert">
            <div class="col col-cert">
              <div class="div-block-107">
                <h2 class="display-500 display-500--dark">Supercharge your career with blockchain developer courses</h2>
                <p class="paragraph paragraph-certified">
                  Get Chainlink certified on Cyfrin, with hands-on learning in Web3, blockchain, tokenization, and smart
                  contracts. Prove your skills and readiness to lead Chainlink-powered projects.<br /><br />Learn to
                  build secure dApps using Chainlink's core services—Data Feeds, VRF, Automation, and CCIP—through a
                  developer-focused certification course.
                </p>
                <a
                  rel="noopener"
                  href="https://updraft.cyfrin.io/courses/chainlink-fundamentals"
                  target="_blank"
                  class="btn btn-primary btn-small btn-cert">Start learning</a
                >
              </div>
              <div class="margin-bottom space-4x"></div>
              <div class="margin-bottom space-6x"></div>
              <div>
                <img
                  src="/images/certification/image-certificate.svg"
                  loading="lazy"
                  alt="Chainlink Certification"
                  class="image-22"
                />
              </div>
            </div>
          </div>
        </section>
      </div>

      <div class="cont">
        <div class="sec-divider"></div>
      </div>

      <section class="sec-big sec-big--dark">
        <div class="cont">
          <div class="section-top">
            <div class="sec-tag sec-tag--blue">THE PLATFORM</div>
          </div>
          <h2 class="display-500 display-500--white">The Learning Environment</h2>
          <div class="platform-tabs">
            <div class="plat-wrapper">
              <div class="plat-placeholder"></div>
              <img
                src="/images/certification/image-200.png"
                loading="lazy"
                width="Auto"
                height="Auto"
                alt=""
                class="plat-absolute plat-absolute--1"
              />
              <img
                src="/images/certification/image-201.png"
                loading="lazy"
                alt=""
                class="plat-absolute plat-absolute--2"
              />
              <img
                src="/images/certification/image-1.png"
                loading="lazy"
                alt=""
                class="plat-absolute plat-absolute--3"
              />
            </div>
            <div class="academy-accordion">
              <div class="acad-acc-item acad-acc-item--active">
                <div class="acad-acc-item__top">
                  <h3 class="acad-acc-item__h">Hands-on learning built by experts</h3>
                  <img
                    src="/images/certification/Tailless--Arrow-Down.svg"
                    loading="lazy"
                    alt=""
                    class="acad-acc-item__arr"
                  />
                </div>
                <p class="acad-acc-item__desc">
                  Experience interactive learning where you'll engage in experiential learning through practical use
                  cases and coding exercises. Dive deep into real-world applications and build your skills with guided
                  practice.
                </p>
              </div>
              <div class="acard-acc-item__divider"></div>
              <div class="acad-acc-item">
                <div class="acad-acc-item__top">
                  <h3 class="acad-acc-item__h">Practice your skills</h3>
                  <img
                    src="/images/certification/Tailless--Arrow-Down.svg"
                    loading="lazy"
                    width="16"
                    alt=""
                    class="acad-acc-item__arr"
                  />
                </div>
                <p class="acad-acc-item__desc">
                  Hands-on, high feedback quizzes and tests to grow your blockchain learning and challenge your smart
                  contract development.
                </p>
              </div>
              <div class="acard-acc-item__divider"></div>
              <div class="acad-acc-item">
                <div class="acad-acc-item__top">
                  <h3 class="acad-acc-item__h">Become a certified Chainlink developer</h3>
                  <img
                    src="/images/certification/Tailless--Arrow-Down.svg"
                    loading="lazy"
                    alt=""
                    class="acad-acc-item__arr"
                  />
                </div>
                <p class="acad-acc-item__desc">
                  Achieve a prestigious certification that is highly regarded in the blockchain industry. This
                  certification not only validates your expertise but also significantly enhances your professional
                  credibility and career prospects.
                </p>
              </div>
              <div class="acard-acc-item__divider"></div>
            </div>
          </div>
        </div>
      </section>

      <div>
        <div class="relative-div relative-div--overflow-hidden">
          <div class="course-left-shape">
            <svg xmlns="http://www.w3.org/2000/svg" width="1440" height="662" fill="none">
              <path d="M-162.021 449.789L101.8 602.094V297.484L-162.021 145.18V449.789Z" fill="#eff6ff"></path>
              <g stroke="#eff6ff" stroke-linejoin="round">
                <path d="M-425.812 602.094l263.792 152.305 263.822-152.305-263.822-152.305-263.792 152.305z"></path>
                <path d="M233.697 525.938V69.023l-395.718 228.458v456.914l395.718-228.457z"></path>
                <path d="M233.695 69.035l-395.718-228.457-395.688 228.457 395.688 228.457L233.695 69.035z"></path>
                <path d="M-162.021 145.18l527.614 304.61v-609.22l-527.614-304.609V145.18z"></path>
                <path d="M-689.604 449.789l527.584 304.61 527.614-304.61L-162.02 145.18-689.604 449.789z"></path>
                <path d="M497.489 373.641v-761.524L-162.021-7.121v761.524l659.51-380.762z"></path>
                <path d="M-162.021-159.429l791.406 456.914v-913.828l-791.406-456.917v913.831z"></path>
                <path d="M-953.395 297.492l791.376 456.915 791.407-456.915-791.407-456.914-791.376 456.914z"></path>
                <path d="M761.28 221.337V-844.797L-162.021-311.73V754.404L761.28 221.337z"></path>
              </g>
              <path d="M-162.021-464.038L893.176 145.181V-1073.26l-1055.197-609.22v1218.442z" fill="#eff6ff"></path>
              <g stroke="#eff6ff" stroke-linejoin="round">
                <path d="M-1217.22 145.18l1055.199 609.219L893.177 145.18-162.021-464.039-1217.22 145.18z"></path>
                <path d="M1025.1 69.032V-1301.71L-162.021-616.34V754.403L1025.1 69.032z"></path>
                <path d="M-1481.01-7.125l1318.99 761.524L1157-7.125-162.02-768.648-1481.01-7.125z"></path>
              </g>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <section class="section-2">
      <section class="sec-big sec-big--light-bg">
        <div class="cont">
          <div class="section-top section-top__align-center">
            <div class="sec-tag">OTHER LEARNINGS</div>
          </div>
          <div class="center-wrap">
            <h2 class="display-500 display-500--dark">Access free learning resources</h2>
          </div>
          <div class="courses-wrap">
            <div class="course-row">
              <div class="course-col">
                <div class="course-card">
                  <div class="course-card__img-wrap">
                    <img src="/images/certification/image-learnings.svg" loading="lazy" alt="" class="cover-image" />
                  </div>
                  <div class="course-card__content">
                    <div class="course-card_top">
                      <h3 class="course-card_h">Chainlink Developer Bootcamps</h3>
                      <p class="course-card__details">
                        Chainlink gives blockchain developers an easy-to-use framework for writing onchain applications.
                        Join a bootcamp to learn how.
                      </p>
                    </div>
                  </div>
                  <div class="course-card_btn-wr">
                    <a href="https://chain.link/bootcamp" class="btn btn-secondary btn-secondary--academy">Explore</a>
                  </div>
                </div>
              </div>
              <div class="course-col">
                <div class="course-card">
                  <div class="course-card__img-wrap">
                    <img src="/images/certification/Imagedevhubvideo.png" loading="lazy" alt="" class="cover-image" />
                  </div>
                  <div class="course-card__content">
                    <div class="course-card_top">
                      <h3 class="course-card_h">DevHub Videos</h3>
                      <p class="course-card__details">
                        Start learning the basics of smart contracts with these step-by-step video tutorials made by
                        expert Chainlink Labs developers.
                      </p>
                    </div>
                  </div>
                  <div class="course-card_btn-wr">
                    <a href="https://dev.chain.link/resources/videos" class="btn btn-secondary btn-secondary--academy"
                      >Explore</a
                    >
                  </div>
                </div>
              </div>
              <div class="course-col">
                <div class="course-card">
                  <div class="course-card__img-wrap">
                    <img
                      src="/images/certification/Imagedevhubresources.png"
                      loading="lazy"
                      alt=""
                      class="cover-image"
                    />
                  </div>
                  <div class="course-card__content">
                    <div class="course-card_top">
                      <h3 class="course-card_h">DevHub Resources</h3>
                      <p class="course-card__details">
                        Understand Chainlink's mission and platform by exploring tutorials, docs, blogs, and more, and
                        learn how Chainlink services underpin the blockchain industry.
                      </p>
                    </div>
                  </div>
                  <div class="course-card_btn-wr">
                    <a href="https://dev.chain.link/resources" class="btn btn-secondary btn-secondary--academy"
                      >Explore</a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </section>
  </main>
</BaseLayout>

<style>
  /* Container and layout utilities */
  .certification-page {
    background-color: white;
  }

  .overflow-hidden {
    overflow: hidden;
  }

  .relative-div {
    position: relative;
  }

  .relative-div--overflow-hidden {
    overflow: hidden;
  }

  .cont {
    max-width: 1440px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 64px;
    padding-right: 64px;
  }

  .cont--cert {
    max-width: 1200px;
  }

  /* Section styles */
  .sec-big {
    padding-top: 80px;
    padding-bottom: 80px;
  }

  .sec-big--dark {
    background-color: #0c162c;
    color: white;
  }

  .sec-big--light {
    background-color: white;
  }

  .sec-big--light-bg {
    background-color: #f5f7fd;
  }

  .sec-divider {
    height: 1px;
    background-color: #e4e8ed;
    margin: 60px 0;
  }

  .section-top {
    margin-bottom: 24px;
  }

  .section-top__align-center {
    text-align: center;
  }

  .sec-tag {
    display: inline-block;
    padding: 4px 12px;
    background-color: #dfe7fb;
    color: #0847f7;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-radius: 4px;
  }

  .sec-tag--blue {
    background-color: #0847f7;
    color: white;
  }

  /* Hero section */
  .col-cert {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 60px 0;
  }

  .div-block-107 {
    max-width: 800px;
    margin-bottom: 40px;
  }

  .display-500 {
    font-size: 48px;
    font-weight: 600;
    line-height: 1.2;
    margin-bottom: 24px;
  }

  .display-500--dark {
    color: #0c162c;
  }

  .display-500--white {
    color: white;
  }

  .paragraph {
    font-size: 16px;
    line-height: 1.6;
    color: #6d7380;
  }

  .paragraph-certified {
    max-width: 624px;
    margin: 24px auto;
  }

  /* Buttons */
  .btn {
    display: inline-block;
    padding: 12px 24px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .btn-primary {
    background-color: #0847f7;
    color: white;
  }

  .btn-primary:hover {
    background-color: #0635c9;
  }

  .btn-secondary {
    background-color: white;
    color: #0847f7;
    border: 1px solid #0847f7;
  }

  .btn-secondary:hover {
    background-color: #f5f7fd;
  }

  .btn-secondary--academy {
    width: 100%;
  }

  .btn-small {
    padding: 10px 20px;
    font-size: 14px;
  }

  .btn-cert {
    margin-top: 24px;
  }

  /* Images */
  .image-22 {
    max-width: 100%;
    height: auto;
    margin-top: 40px;
  }

  .cover-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  /* Spacing utilities */
  .margin-bottom {
    margin-bottom: 0;
  }

  .space-4x {
    margin-bottom: 32px;
  }

  .space-6x {
    margin-bottom: 48px;
  }

  /* Background decorations */
  .course-left-shape {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .course-left-shape svg {
    position: absolute;
    top: 0;
    left: 0;
  }

  /* Platform tabs section */
  .platform-tabs {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    margin-top: 60px;
    align-items: center;
  }

  .plat-wrapper {
    position: relative;
    width: 100%;
  }

  .plat-placeholder {
    padding-bottom: 75%;
  }

  .plat-absolute {
    position: absolute;
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .plat-absolute--1 {
    z-index: 3;
    transform: translate(0, 0);
  }

  .plat-absolute--2 {
    z-index: 2;
    transform: translate(-16px, -16px);
  }

  .plat-absolute--3 {
    z-index: 1;
    transform: translate(-32px, -32px);
  }

  /* Academy accordion */
  .academy-accordion {
    width: 100%;
  }

  .acad-acc-item {
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .acad-acc-item__top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px 0;
  }

  .acad-acc-item__h {
    color: #6d7380;
    font-size: 20px;
    font-weight: 600;
    margin: 0;
    transition: color 0.3s ease;
  }

  .acad-acc-item--active .acad-acc-item__h {
    color: white;
  }

  .acad-acc-item__arr {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .acad-acc-item--active .acad-acc-item__arr {
    transform: rotate(-180deg);
  }

  .acad-acc-item__desc {
    height: 0;
    overflow: hidden;
    color: #858a95;
    font-size: 16px;
    line-height: 1.6;
    padding-bottom: 0;
    transition: all 0.3s ease;
  }

  .acad-acc-item--active .acad-acc-item__desc {
    height: auto;
    padding-bottom: 24px;
  }

  .acad-acc-item__top:hover .acad-acc-item__h {
    color: white;
  }

  .acard-acc-item__divider {
    height: 1px;
    background-color: #252e42;
  }

  /* Courses section */
  .section-2 {
    background-color: #f5f7fd;
  }

  .center-wrap {
    text-align: center;
    margin-bottom: 60px;
  }

  .courses-wrap {
    margin-top: 40px;
  }

  .course-row {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  .course-col {
    display: flex;
  }

  .course-card {
    display: flex;
    flex-direction: column;
    background-color: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
    width: 100%;
  }

  .course-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.12);
  }

  .course-card__img-wrap {
    width: 100%;
    overflow: hidden;
  }

  .course-card__content {
    padding: 24px;
    flex-grow: 1;
  }

  .course-card_top {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .course-card_h {
    color: #0c162c;
    font-size: 20px;
    font-weight: 600;
    margin: 0;
  }

  .course-card__details {
    color: #6d7380;
    font-size: 16px;
    line-height: 1.6;
    margin: 0;
  }

  .course-card_btn-wr {
    padding: 0 24px 24px;
  }

  /* Responsive styles */
  @media (max-width: 991px) {
    .cont {
      padding-left: 32px;
      padding-right: 32px;
    }

    .platform-tabs {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .course-row {
      grid-template-columns: 1fr;
    }

    .display-500 {
      font-size: 36px;
    }
  }

  @media (max-width: 767px) {
    .cont {
      padding-left: 16px;
      padding-right: 16px;
    }

    .display-500 {
      font-size: 32px;
    }

    .sec-big {
      padding-top: 60px;
      padding-bottom: 60px;
    }

    .platform-tabs {
      gap: 32px;
    }
  }
</style>

<script>
  // Accordion functionality
  document.addEventListener("DOMContentLoaded", function () {
    const accordionItems = document.querySelectorAll(".acad-acc-item")
    const absoluteItems = document.querySelectorAll(".plat-absolute")

    const zIndexValues = [3, 2, 1]
    const transformValues = ["translate(0, 0)", "translate(-16px, -16px)", "translate(-32px, -32px)"]

    accordionItems.forEach((item, index) => {
      item.addEventListener("click", function () {
        if (!this.classList.contains("acad-acc-item--active")) {
          // Remove active class from all items
          accordionItems.forEach((col) => {
            col.classList.remove("acad-acc-item--active")
          })

          // Add active class to clicked item
          this.classList.add("acad-acc-item--active")

          // Update image stack positions
          absoluteItems.forEach((el, i) => {
            const newIndex = (i - index + absoluteItems.length) % absoluteItems.length
            el.style.zIndex = String(zIndexValues[newIndex])
            el.style.transform = transformValues[newIndex]
          })
        }
      })
    })
  })
</script>
